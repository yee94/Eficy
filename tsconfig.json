{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2018", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "removeComments": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "paths": {
      "@eficy/core": ["packages/core/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
