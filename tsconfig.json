{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2018", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "removeComments": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "paths": {
      "@eficy/reactive": ["packages/reactive/src"],
      "@eficy/reactive-react": ["packages/reactive-react/src"],
      "@eficy/reactive-async": ["packages/reactive-async/src"],
      "@eficy/core-jsx": ["packages/core-jsx/src"],
      "@eficy/plugin-unocss": ["packages/plugin-unocss/src"],
      "@eficy/browser": ["packages/browser/src"],
      "@eficy/eficy": ["packages/eficy/src"]
    }
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
